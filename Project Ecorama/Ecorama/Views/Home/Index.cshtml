@model Ecorama.Models.HomeViewModel


@{
	ViewData["Title"] = "Home";
	Layout = "~/Views/Shared/_Layout.cshtml"; // أو أي Layout عام بتستخدمه
}


@section Style {

	<link rel="stylesheet" href="/css/course/css/bootstrap.min.css">
	<link rel="stylesheet" href="/css/course/css/font-awesome.min.css">
	<link rel="stylesheet" href="/css/course/css/owl.carousel.css">
	<link rel="stylesheet" href="/css/course/css/style.css">

	<!-- MAIN CSS -->
	<link rel="stylesheet" href="~/css/course/css/templatemo-style.css">

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" />


	<style>


		.carousel-item {
			height: 90vh; /* تقليل الارتفاع إلى 60% من الشاشة */
			min-height: 400px;
			position: relative;
		}

			.carousel-item img {
				object-fit: cover;
				height: 100%;
				width: 100%;
				filter: brightness(60%); /* تعتيم الصورة لإبراز النص */
			}

		.carousel-caption-custom {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			text-align: center;
			color: #fff;
			z-index: 10;
		}

			.carousel-caption-custom h2 {
				font-size: 2.5rem;
				font-weight: bold;
			}

			.carousel-caption-custom p {
				font-size: 1.2rem;
			}


		h2 {
			text-align: center;
		}


		.btnWorkShop {
			padding: 10px 20px;
			font-size: 14px;
			background: #ff6b3d
		}



		/* About Section */
		.about {
			padding: 80px 0;
			background-color: white;
		}

		.section-title {
			text-align: center;
			margin-bottom: 60px;
			position: relative;
		}

			.section-title h2 {
				font-size: 32px;
				color: #063b5c; /* primary-color */
				position: relative;
				display: inline-block;
				padding-bottom: 15px;
			}

				/* .section-title h2::before { */
				/* 	content: ''; */
				/* 	position: absolute; */
				/* 	width: 50%; */
				/* 	height: 3px; */
				/* 	background-color: #15a1cf; /* secondary-color */ 
				/* 	bottom: 0; */
				/* 	right: 25%; */
				/* } */

		.about-content {
			display: flex;
			flex-wrap: wrap;
			align-items: center;
			gap: 40px;
		}

		.about-text {
			flex: 1;
			min-width: 300px;
		}

			.about-text h3 {
				font-size: 28px;
				margin-bottom: 20px;
				color: #063b5c; /* primary-color */
			}

			.about-text p {
				margin-bottom: 20px;
				line-height: 1.8;
				font-size: 16px;
			}

		.about-image {
			flex: 1;
			min-width: 300px;
			position: relative;
			border-radius: 10px;
			overflow: hidden;
			box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); /* shadow */
		}

			.about-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 1s ease;
			}

			.about-image:hover img {
				transform: scale(1.05);
			}





		/* Services Section */
		.services {
			padding: 80px 0;
			background-color: #f9f9f9;
		}

		.services-container {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			gap: 30px;
		}

		.service-card {
			background-color: white;
			border-radius: 10px;
			overflow: hidden;
			width: 300px;
			box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
			transition: all 0.3s ease;
			position: relative;
			top: 0;
			opacity: 1; /* أو ببساطة إزالة السطر */
			transform: translateY(10px);
		}


			.service-card:hover {
				transform: translateY(-10px);
				box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
			}

		.service-image {
			height: 180px;
			overflow: hidden;
		}

			.service-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.5s ease;
			}

		.service-card:hover .service-image img {
			transform: scale(1.1);
		}

		.service-content {
			padding: 20px;
		}

			.service-content h3 {
				font-size: 20px;
				margin-bottom: 10px;
				color: #063b5c;
			}

			.service-content p {
				line-height: 1.6;
				margin-bottom: 15px;
				font-size: 14px;
			}

		.service-link {
			display: inline-block;
			color: #15a1cf;
			font-weight: 600;
			text-decoration: none;
			transition: all 0.3s ease;
		}

			.service-link:hover {
				color: #ff6b3d;
			}

			.service-link i {
				margin-right: 5px;
				transition: all 0.3s ease;
			}

			.service-link:hover i {
				transform: translateX(-5px);
			}

		/* End Services Section */


		/* Latest Workshops */
		.latest-workshops {
			padding: 80px 0;
			background-color: #f9f9f9; /* خلفية بيضاء فاتحة */
		}

		.workshops-container {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			gap: 30px;
		}

		.workshop-card {
			background-color: white;
			border-radius: 10px;
			overflow: hidden;
			width: 350px;
			box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); /* الظل */
			transition: all 0.3s ease; /* الانتقال */
			opacity: 1;
			transform: translateY(10px);
		}

			.workshop-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
			}

		.workshop-image {
			height: 200px;
			position: relative;
			overflow: hidden;
		}

			.workshop-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.5s ease;
			}

		.workshop-card:hover .workshop-image img {
			transform: scale(1.1);
		}

		.workshop-date {
			position: absolute;
			top: 15px;
			right: 15px;
			background-color: #ff6b3d; /* اللون المميز */
			color: white;
			padding: 5px 10px;
			border-radius: 5px;
			font-weight: 500;
			font-size: 14px;
		}

		.workshop-content {
			padding: 20px;
		}

			.workshop-content h3 {
				font-size: 20px;
				margin-bottom: 10px;
				color: #063b5c; /* اللون الأساسي */
			}

		.workshop-details {
			display: flex;
			margin-bottom: 15px;
			font-size: 14px;
			color: #666;
		}

		.workshop-detail {
			display: flex;
			align-items: center;
			margin-left: 15px;
		}

			.workshop-detail i {
				margin-left: 5px;
				color: #15a1cf; /* اللون الثانوي */
			}

		.workshop-content p {
			line-height: 1.6;
			margin-bottom: 15px;
			font-size: 14px;
		}

		/* End Latest Workshops */





		/* Partners */
		.partners-slider-section {
			padding: 60px 0;
			background: white;
			overflow: hidden;
		}

		.slider-container {
			position: relative;
			width: 100%;
			margin: 40px auto;
			overflow: hidden;
		}

		.slider-track {
			display: flex;
			width: max-content;
			animation: scroll 20s linear infinite;
			will-change: transform;
		}

		.slider-container:hover .slider-track {
			animation-play-state: paused;
		}

		.slider-item {
			width: 200px;
			height: 100px;
			margin: 0 25px;
			display: flex;
			align-items: center;
			justify-content: center;
			flex-shrink: 0;
		}

			.slider-item img {
				max-width: 100%;
				max-height: 70px;
				filter: grayscale(100%);
				opacity: 1;
				transition: all 0.3s ease;
			}

			.slider-item:hover img {
				filter: grayscale(0);
				opacity: 1;
				transform: scale(1.1);
			}

			@@keyframes scroll {
			0%

		{
			transform: translateX(0);
		}

		100% {
			transform: translateX(-50%);
		}
		/* تحريك بنسبة 50% فقط */
		}

			@@media (max-width: 768px) {
			.slider-item

		{
			width: 150px;
			margin: 0 15px;
		}

		}

		/* End Partners */


		/* Stats Section */
		.stats {
			padding: 60px 0;
			background-color: #063b5c; /* var(--primary-color) */
			color: white;
		}

		.stats-container {
			display: flex;
			flex-wrap: wrap;
			justify-content: space-around;
		}

		.stat-item {
			text-align: center;
			margin: 20px;
			min-width: 200px;
			opacity: 1;
			transform: translateY(20px);
			transition: all 0.3s ease; /* var(--transition) */
		}

		.stat-icon {
			font-size: 40px;
			margin-bottom: 15px;
			color: #ff6b3d; /* var(--accent-color) */
		}

		.stat-number {
			font-size: 36px;
			font-weight: 700;
			margin-bottom: 10px;
		}

		.stat-text {
			font-size: 16px;
			font-weight: 500;
		}

		/* CTA Section */
		.cta {
			padding: 80px 0;
			background-color: #063b5c; /* بدل var(--primary-color) */
			color: white;
			text-align: center;
		}

		.cta-content {
			max-width: 700px;
			margin: 0 auto;
		}

			.cta-content h2 {
				font-size: 32px;
				margin-bottom: 20px;
			}

			.cta-content p {
				margin-bottom: 30px;
				line-height: 1.7;
			}

		.cta-buttons {
			display: flex;
			justify-content: center;
			gap: 20px;
		}

		.cta-btn {
			padding: 12px 30px;
			border-radius: 5px;
			text-decoration: none;
			font-weight: 600;
			transition: all 0.3s ease; /* بدل var(--transition) */
		}

		.primary-btn {
			background-color: #ff6b3d; /* بدل var(--accent-color) */
			color: white;
		}

			.primary-btn:hover {
				background-color: #e55a2e;
				transform: translateY(-3px);
				box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
			}

		.secondary-btn {
			background-color: transparent;
			color: white;
			border: 2px solid white;
		}

			.secondary-btn:hover {
				background-color: white;
				color: #063b5c; /* بدل var(--primary-color) */
				transform: translateY(-3px);
				box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
			}


		/* ENd CTA Section */




		/* Animation Keyframes */
		@@keyframes fadeInUp {
			from {
				opacity: 0;
				transform: translateY(20px);
			}

			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		@@keyframes ticker {
			0% {
				transform: translateX(100%);
			}

			100% {
				transform: translateX(-100%);
			}
		}

		@@keyframes partnerSlide {
			0% {
				transform: translateX(0);
			}

			100% {
				transform: translateX(-100%);
			}
		}

		/* Media Queries */
		@@media screen and (max-width: 992px) {
			.nav-links {
				position: fixed;
				top: 80px;
				right: -100%;
				width: 100%;
				height: calc(100vh - 80px);
				background-color: white;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				transition: all 0.3s ease; /* استبدال var(--transition) */
				z-index: 999;
			}

				.nav-links.active {
					right: 0;
				}

				.nav-links li {
					margin: 15px 0;
				}

			.hamburger {
				display: flex;
			}

			.navbar.active .hamburger span:nth-child(1) {
				transform: translateY(9px) rotate(45deg);
			}

			.navbar.active .hamburger span:nth-child(2) {
				opacity: 0;
			}

			.navbar.active .hamburger span:nth-child(3) {
				transform: translateY(-9px) rotate(-45deg);
			}

			.about-content {
				flex-direction: column;
			}

			.about-text,
			.about-image {
				width: 100%;
			}

			.slide-content h1 {
				font-size: 32px;
			}

			.slide-content p {
				font-size: 16px;
			}
		}

		@@media screen and (max-width: 768px) {
			.hero {
				height: 60vh;
			}

			.slide-content h1 {
				font-size: 28px;
			}

			.about-text h3 {
				font-size: 24px;
			}

			.section-title h2 {
				font-size: 28px;
			}

			.cta-content h2 {
				font-size: 28px;
			}

			.cta-buttons {
				flex-direction: column;
				align-items: center;
			}

			.cta-btn {
				width: 100%;
				margin-bottom: 10px;
			}
		}

		@@media screen and (max-width: 576px) {
			.hero {
				height: 50vh;
				margin-top: 70px;
			}

			.slide-content h1 {
				font-size: 24px;
				margin-bottom: 15px;
			}

			.slide-content p {
				font-size: 14px;
				margin-bottom: 20px;
			}

			.btn {
				padding: 10px 20px;
				font-size: 14px;
			}

			.stat-number {
				font-size: 30px;
			}

			.testimonial-quote {
				font-size: 16px;
				padding: 0 15px;
			}

			.footer-content {
				flex-direction: column;
			}

			.navbar {
				padding: 10px 0;
			}

			.ticker-title {
				position: relative;
				padding: 5px 10px;
				margin-bottom: 10px;
				text-align: center;
				display: block;
				width: fit-content;
			}

			.ticker-wrapper {
				margin-right: 0;
			}

			.news-ticker {
				padding: 10px 0;
				display: flex;
				flex-direction: column;
				align-items: center;
			}
		}

		/* News Ticker */
		.news-ticker {
			padding: 15px 0;
			background-color: #15a1cf; /* secondary-color */
			color: white;
			position: relative;
			overflow: hidden;
		}

		.ticker-title {
			position: absolute;
			right: 0;
			top: 0;
			height: 100%;
			background-color: #ff6b3d; /* accent-color */
			color: white;
			padding: 15px 20px;
			font-weight: 700;
			display: flex;
			align-items: center;
			z-index: 2;
		}

		.ticker-wrapper {
			margin-right: 150px;
			overflow: hidden;
			height: 30px;
		}

		.ticker-news {
			display: flex;
			animation: ticker 30s linear infinite;
			white-space: nowrap;
		}

		.ticker-item {
			padding: 0 30px;
			display: flex;
			align-items: center;
		}

			.ticker-item i {
				margin-left: 8px;
			}




		/* قسم الأخبار */
		.news-section {
			padding: 60px 0;
			background-color: #f5f5f5; /* var(--light-bg) */
		}

		.container {
			max-width: 1200px;
			margin: 0 auto;
			padding: 0 20px;
		}

		.section-title {
			text-align: center;
			margin-bottom: 40px;
			position: relative;
		}

			.section-title h2 {
				font-size: 32px;
				margin: 0;
				padding-bottom: 10px;
				display: inline-block;
			}

				.section-title h2:after {
					content: '';
					display: block;
					width: 60px;
					height: 3px;
					background-color: transparent; /* var(--accent-color) */
					margin: 10px auto 0;
				}

		.news-grid {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			gap: 30px;
		}

		.news-card {
			background-color: #fff;
			border-radius: 8px;
			overflow: hidden;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* var(--card-shadow) */
			transition: transform 0.3s ease, box-shadow 0.3s ease;
		}

			.news-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
			}

		.news-image {
			height: 200px;
			overflow: hidden;
			position: relative;
		}

			.news-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.5s ease;
			}

		.news-card:hover .news-image img {
			transform: scale(1.05);
		}

		.news-category {
			position: absolute;
			top: 15px;
			right: 15px;
			background-color: #ff6b3d; /* var(--primary-color) */
			color: white;
			padding: 5px 10px;
			border-radius: 4px;
			font-size: 12px;
			font-weight: bold;
		}

		.news-content {
			padding: 20px;
		}

		.news-date {
			font-size: 14px;
			color: #777;
			margin-bottom: 10px;
			display: flex;
			align-items: center;
		}

			.news-date i {
				margin-left: 5px;
				color: #e55a2e; /* var(--secondary-color) */
			}

		.news-title {
			font-size: 18px;
			font-weight: bold;
			margin-bottom: 10px;
			line-height: 1.4;
		}

		.news-excerpt {
			font-size: 14px;
			line-height: 1.6;
			color: #555;
			margin-bottom: 15px;
		}

		.read-more {
			display: inline-block;
			color: #ff6b3d; /* var(--primary-color) */
			font-weight: bold;
			text-decoration: none;
			font-size: 14px;
			transition: color 0.3s ease;
		}

			.read-more:hover {
				color: #e55a2e; /* var(--secondary-color) */
			}

		.view-all-btn {
			text-align: center;
			margin-top: 40px;
		}

			.view-all-btn a {
				display: inline-block;
				background-color: #ff6b3d; /* var(--primary-color) */
				color: white;
				padding: 10px 25px;
				border-radius: 4px;
				text-decoration: none;
				font-weight: bold;
				transition: background-color 0.3s ease;
			}

				.view-all-btn a:hover {
					background-color: #e55a2e; /* var(--secondary-color) */
				}

		/* التصميم المتجاوب */
		@@media (max-width: 992px) {
			.news-grid {
				grid-template-columns: repeat(2, 1fr);
			}
		}

		@@media (max-width: 768px) {
			.news-grid {
				grid-template-columns: 1fr;
			}
		}


		.title-decoration {
			width: 80px;
			height: 4px;
			background: linear-gradient(90deg, #3498db, #9b59b6);
			margin: 0 auto;
			border-radius: 2px;
			animation: titleUnderline 2s ease-in-out infinite alternate;
		}

			@@keyframes titleUnderline {
			0%

		{
			transform: scaleX(0.8);
			background: linear-gradient(90deg, #3498db, #9b59b6);
		}

		50% {
			transform: scaleX(1.2);
			background: linear-gradient(90deg, #9b59b6, #3498db);
		}

		100% {
			transform: scaleX(0.8);
			background: linear-gradient(90deg, #3498db, #9b59b6);
		}

		}



		/* course  */


		.courses-style {
			padding: 60px 0;
			background: #f9f9f9;
			direction: rtl;
		}

		.section-header {
			text-align: center;
			margin-bottom: 40px;
		}

			.section-header h2 {
				font-size: 32px;
				color: #2c3e50;
				position: relative;
				display: inline-block;
				padding-bottom: 15px;
			}

				/* .section-header h2:after { */
				/* 	content: ''; */
				/* 	position: absolute; */
				/* 	bottom: 0; */
				/* 	right: 0; */
				/* 	width: 100%; */
				/* 	height: 3px; */
				/* 	background: #3498db; */
				/* } */

		.courses-container {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
			gap: 30px;
			margin-bottom: 40px;
		}

		.course-card {
			background: #fff;
			border-radius: 10px;
			overflow: hidden;
			box-shadow: 0 5px 15px rgba(0,0,0,0.1);
			transition: all 0.3s ease;
		}

			.course-card:hover {
				transform: translateY(-10px);
				box-shadow: 0 15px 30px rgba(0,0,0,0.15);
			}

		.course-image {
			position: relative;
			height: 200px;
			overflow: hidden;
		}

			.course-image img {
				width: 100%;
